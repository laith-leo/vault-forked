<PageHeader as |p|>
  <p.top>
    <KeyValueHeader @baseKey={{this.model}} @path="vault.cluster.access.method" @root={{this.root}} @showCurrent={{true}} />
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      Configure
      {{get (find-by "type" this.model.type (mountable-auth-methods)) "displayName"}}
    </h1>
  </p.levelLeft>
</PageHeader>

{{section-tabs this.model}}

<Toolbar>
  <ToolbarActions>
    <ToolbarLink @params={{array "vault.cluster.access.method" this.model.id}} data-test-backend-view-link={{true}}>
      View method
    </ToolbarLink>
  </ToolbarActions>
</Toolbar>

{{outlet}}